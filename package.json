{
  "name": "iobroker.tibberlink",
  "version": "1.4.2",
  "description": "links tibber API data to be used in ioBroker",
  "author": {
    "name": "Hombach",
    "email": "tibberlink@homba.ch"
  },
  "homepage": "https://github.com/Hombach/ioBroker.tibberlink",
