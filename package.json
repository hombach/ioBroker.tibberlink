{
  "name": "iobroker.tibberlink",
  "version": "0.1.1",
  "description": "links tibber API data to be used in ioBroker",
  "author": {
    "name": "Hombach",
    "email": "tibberlink@homba.ch"
  },
  "homepage": "https://github.com/Hombach/ioBroker.tibberlink",
  "license": "GPL-3.0-only",
  "keywords": [
    "power",
    "energy",
    "Energieversorger",
    "Tibber"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hombach/ioBroker.tibberlink.git"
  },
  "engines": {
    "node": ">= 16.4.0"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.8",
    "tibber-api": "~5.1.9"
  },
  "devDependencies": {
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.4.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/"
  },
  "bugs": {
    "url": "https://github.com/Hombach/ioBroker.tibberlink/issues"
  },
  "readmeFilename": "README.md"
}
